<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @customer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @customer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @customer.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<div id="orders">
  <% if @customer.orders.present? %>
    <h1>Orders</h1>
  <%= render @customer.orders %>
  <% end %>
  <h2>Add a Order</h2>
  <%= render partial: "orders/form", locals: {order: @customer.orders.new} %>
</div>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
