<p id="notice"><%= notice %></p>
<h1>Customer Info: </h1>
<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @customer.full_name %></td>
        <td><%= @customer.phone %></td>
        <td><%= @customer.email %></td>
      </tr>
  </tbody>
</table>


<h1>Order Info:</h1>
<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product count</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders = @customer.orders %>
    <% @orders.each do |o| %>
      <tr>
        <td><%= o.product_name %></td>
        <td><%= o.product_count  %></td>
        <td><%= link_to 'Edit', edit_order_path(o) %></td>
        <td><%= link_to 'Destroy', o, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Order', new_order_path %> <br>
<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
<br>
